<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Successful"
    android:gravity="center">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_3juvcrdk.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you."
        android:textColor="#717171"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Bus Booking Payment"
        android:textColor="#FF707070"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done Successful."
        android:textColor="#707070"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>


        <Button
            android:id="@+id/toHome"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Go Back to home"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgbook"
            android:clickable="true"/>

</LinearLayout>