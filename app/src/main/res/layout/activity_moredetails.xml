<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <LinearLayout
        android:id="@+id/parentBlue"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:background="@color/purple_700"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:fontFamily="@font/poppins"
                android:src="@drawable/ic_baseline_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Additional booking details
before proceeding to make payment."
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/card1"
        android:layout_width="383dp"
        android:layout_height="154dp"
        android:layout_below="@+id/parentBlue"
        android:layout_alignBottom="@+id/parentBlue"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-57dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-97dp"
        android:background="@drawable/component_bg"
        android:elevation="10dp"


        >

        <RelativeLayout
            android:id="@+id/comp1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_anchor="@+id/comp1"
            app:layout_anchorGravity="center">

            <LinearLayout
                android:id="@+id/fromLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/deactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="From - "
                    android:textColor="#6C6B6B" />

                <TextView
                    android:id="@+id/fromID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Lusaka"
                    android:textColor="#6C6B6B" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/toLayout"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fromLayout"
                android:layout_alignStart="@+id/fromLayout"
                android:layout_alignEnd="@+id/fromLayout"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="-9dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/active" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="To - "
                    android:textColor="#6C6B6B" />

                <TextView
                    android:id="@+id/toID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Ndola"
                    android:textColor="#6C6B6B" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/moreLayout"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_money" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="K "
                        android:textColor="#FF474747" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="230"
                        android:textColor="#FF474747" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Disscount: "
                        android:textColor="#FF474747" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="K"
                        android:textColor="@color/orange" />

                    <TextView
                        android:id="@+id/dis_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/poppins"
                        android:text="0.0"
                        android:textColor="@color/orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="2dp">


                    <TextView
                        android:id="@+id/station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="intercity"
                        android:textColor="#6C6B6B" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:layout_below="@+id/card1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="none"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/coverID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/component_bg"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="How many passengers(Adults + children)?"
                            android:textColor="#6C6B6B" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/passengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="#8004387D"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="7dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="2dp">

                        <TextView
                            android:id="@+id/passenger_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/poppins"
                            android:text="Passengers - "
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/passenger_counterID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/passengerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="expandPassengerView"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/passenger" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="7dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/passengerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/AdultsTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Adults"
                            android:textColor="#6C6B6B"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <com.travijuu.numberpicker.library.NumberPicker
                            android:id="@+id/Adults_number_picker"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone"
                            numberpicker:custom_layout="@layout/number_picker_custom_layout"
                            numberpicker:focusable="false"
                            numberpicker:max="10"
                            numberpicker:min="1"
                            numberpicker:unit="1"
                            numberpicker:value="1" />

                        <TextView
                            android:id="@+id/ChildrenTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Children"
                            android:textColor="#6C6B6B"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <com.travijuu.numberpicker.library.NumberPicker
                            android:id="@+id/Children_number_picker"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone"
                            numberpicker:custom_layout="@layout/number_picker_custom_layout"
                            numberpicker:focusable="false"
                            numberpicker:max="10"
                            numberpicker:min="0"
                            numberpicker:unit="1"
                            numberpicker:value="0" />

                        <TextView
                            android:id="@+id/PassengerPolicyTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/headingPolicy"
                            android:textColor="#6C6B6B"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/AdultsPolicyTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/passenger_policy2"
                            android:textColor="#6C6B6B"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/ChildrenPolicyTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/passenger_policy"
                            android:textColor="#6C6B6B"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/savePassengerData"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="#8004387D"
                            android:text="Done"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/component_bg"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="When do you want to go?"
                            android:textColor="#6C6B6B" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/datelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="#8004387D"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="7dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="2dp">

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:fontFamily="@font/poppins"
                            android:text="Today - "
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="30th march, 2022"
                            android:textColor="#ffffff" />

                        <ImageView
                            android:id="@+id/datePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:src="@drawable/ic_date" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/component_bg"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:theme="@style/Theme.Pajane">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Remind me before departure"
                            android:textColor="#6C6B6B" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">


                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#1976D2"
                            android:buttonTint="@color/purple_700"
                            android:buttonTintMode="src_over"
                            android:text="Remind me"
                            android:textColor="@color/gray"
                            android:thumbTint="#04387D" />
                    </LinearLayout>


                </LinearLayout>


                <ImageButton
                    android:id="@+id/paynowbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/paybtn"
                    android:elevation="7dp"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="10dp"
                    android:text="PAY NOW"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>